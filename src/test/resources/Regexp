@header {
package com.khovanskiy.ll1generator.core;
import com.khovanskiy.ll1generator.core.Tree;
}

@members {
//members
}

regexp returns Tree : t d { return new Tree("R", t.get(0), d.get(0)); };
d returns Tree : OR t d { return new Tree("D", new Tree("|"), t.get(0), d.get(0));} | {return new Tree("D", new Tree("eps"));} ;
t returns Tree : f p {return new Tree("T", f.get(0), p.get(0));} ;
p returns Tree: f p {return new Tree("P", f.get(0), p.get(0));} | {return new Tree("P", new Tree("eps"));};
f returns Tree : n w {return new Tree("F", n.get(0), w.get(0));};
w returns Tree : ASTERISK w {return new Tree("W", new Tree(ASTERISK.get(0)), w.get(0));} | {return new Tree("W", new Tree("eps"));};
n returns Tree : OPEN_BRACKET regexp CLOSE_BRACKET {return new Tree("N", new Tree(OPEN_BRACKET.get(0)), regexp.get(0), new Tree(CLOSE_BRACKET.get(0)));} | CHAR {return new Tree("N", new Tree(CHAR.get(0)));};

OR: '|';
OPEN_BRACKET : '(' ;
CLOSE_BRACKET : ')' ;
ASTERISK: '*' ;
CHAR : 'a' | 'b' | 'c' | 'd' | 'e' | 'f';
